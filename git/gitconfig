[core]
  editor = nvim
  excludesfile = ~/.dotfiles/git/gitignore_global
  attributesfile = ~/.dotfiles/git/gitattributes
  pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
  template = ~/.dotfiles/git/git-commit-msg-template
[alias]
  a = add
  b = branch
  co = checkout
  c = commit
  cl = clone
  p = push
  l = pull
  rb = rebase
  st = status
  conflicts = diff --name-only --diff-filter=U

  fire = !git-fire
  fuck = !git-fuck-this
  patch = !git --no-pager diff
[branch]
  autosetuprebase = always
[merge]
  tool = vimdiff
  log = true
[diff]
  tool = vimdiff
  submodule = log
[diff "pdf"]
  binary = true
  cachetextconv = true
  textconv = diffpdf
[diff "odt"]
  binary = true
  cachetextconv = true
  textconv = odt2txt
[diff "word"]
  binary = true
  cachetextconv = true
  textconv = catdoc
[diff "xls"]
  binary = true
  cachetextconv = true
  textconv = xls2csv
[diff "ppt"]
  binary = true
  cachetextconv = true
  textconv = catppt
[push]
  default = simple
[pull]
  rebase = true
